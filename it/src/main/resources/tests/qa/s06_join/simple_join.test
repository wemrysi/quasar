{
    "name": "[qa_s06] simple join",

    "backends": {
        "couchbase":      "timeout",
        "marklogic_json": "timeout",
        "marklogic_xml":  "timeout",
        "mimir":          "ignoreFieldOrder",
	"postgres":       "ignoreFieldOrder"
    },

    "data": ["leftData.data", "rightData.data"],

    "query": "select * from leftData as l inner join rightData as r on l.a = r.a",

    "predicate": "exactly",
    "ignoreResultOrder": true,
    "expected": [
       {"c": 2, "a": 1, "b": 10, "login": "mike" },
       {"c": 2, "a": 1, "b": 20, "login": "john" },
       {"c": 4, "a": 2, "b": 20, "login": "kate" },
       {"c": 4, "a": 2, "b": 30, "login": "paul" }
    ]
}
